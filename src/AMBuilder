import os

projectName = 'SourceLocalizationPhrasesGenerator'

# All source files that need to be compiled
sourceFiles = [
  'ext/extension.cpp',
  'ext/localization/localize.cpp',
  'ext/phrases_generator/phrasesgen.cpp'
]

project = Extension.HL2Project(builder, projectName + '.ext')

project.sources += [
  os.path.join(Extension.sm_root, 'public', 'smsdk_ext.cpp'),
  *sourceFiles
]

binary = Extension.HL2Config(project, projectName + '.ext')

Extension.extensions = builder.Add(project)
